<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
<ScrollView 
    android:id="@+id/layout" 
    android:layout_height="match_parent"         
    android:scrollbars="horizontal|vertical" 
    android:layout_width="match_parent"     
    android:layout_marginTop="5dip"     
    android:scrollbarStyle="outsideInset"
    android:fillViewport="true"> 
    
    <HorizontalScrollView 
        android:id="@+id/horizontalView" 
        android:layout_height="wrap_content"     
        android:scrollbars="horizontal|vertical" 
        android:layout_width="wrap_content"     
        android:layout_marginTop="5dip">
    
<TableLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true" >

    <TableRow>
        <ImageButton
            android:id="@+id/imagebutton0"
            android:layout_width="140dip"
            android:layout_height="90dip"
            android:background="@null"
            android:focusable="true"
            android:padding="5dip"
            android:scaleType="fitXY"
            android:src="@drawable/beefburger" />

        <TextView android:text="Beef Burger"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>
        <ImageButton android:id="@+id/imagebutton1"
            android:src="@drawable/chickenburger"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="5dip"
            android:layout_width="140dip"
            android:layout_height="90dip" android:clickable="true"/>
        <TextView android:text="Chicken Burger"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>
        <ImageButton android:id="@+id/imagebutton2"
            android:src="@drawable/coke"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="5dip"
            android:layout_width="140dip"
            android:layout_height="90dip" android:clickable="true"/>
        <TextView android:text="Coca-Cola"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>
        <ImageButton android:id="@+id/imagebutton3"
            android:src="@drawable/fanta"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="5dip"
            android:layout_width="140dip"
            android:layout_height="90dip" />
        <TextView android:text="Fanta"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>
        <ImageButton android:id="@+id/imagebutton4"
            android:src="@drawable/fish"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="5dip"
            android:layout_width="140dip"
            android:layout_height="90dip" />
        <TextView android:text="Battered Fish"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
      <TableRow>
        <ImageButton android:id="@+id/imagebutton5"
            android:src="@drawable/fries"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="5dip"
            android:layout_width="140dip"
            android:layout_height="90dip" />
        <TextView android:text="French Fries"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
      <TableRow>
        <ImageButton android:id="@+id/imagebutton6"
            android:src="@drawable/pizza"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="5dip"
            android:layout_width="140dip"
            android:layout_height="90dip" />
        <TextView android:text="Pizza"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
      <TableRow>
        <ImageButton android:id="@+id/imagebutton7"
            android:src="@drawable/water"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="5dip"
            android:layout_width="140dip"
            android:layout_height="90dip" />
        <TextView android:text="Water"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

</TableLayout>
</HorizontalScrollView>
</ScrollView>
</LinearLayout>
